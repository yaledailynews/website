    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "geist": "^1.3.1",
    "graphql": "^16.9.0",
    "jsonwebtoken": "9.0.2",
    "lexical": "0.20.0",
    "lucide-react": "^0.453.0",
    "meilisearch": "^0.45.0",
    "next": "^15.0.3",
    "openai": "^4.73.0",
    "payload": "^3.0.2",
