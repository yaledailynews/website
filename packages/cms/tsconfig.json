{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "react": [
        "./node_modules/@types/react"
      ],
      "@cms/*": [
        "./src/*"
      ],
      "@frontend/*": [
        "../../packages/frontend/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "redirects.js",
    "next.config.js",
    "eslint.config.mjs",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}